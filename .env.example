# MPSA Configuration Examples
# Copy this file to .env and adjust values for your environment

# === Logging Configuration ===
LOG_LEVEL=INFO
LOG_FILE=mpsa.log

# === Scraping Configuration ===
REQUEST_TIMEOUT=10
RETRIES=3

# === Analysis Configuration ===
MAX_REVIEWS=100
MIN_REVIEWS=5
LANGUAGE=en
FINBERT_MODEL=ProsusAI/finbert

# === API Configuration ===
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# === Streamlit Configuration ===
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# === Amazon Configuration ===
AMAZON_PLATFORM=com

# === Cache Configuration (if using Redis) ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# === Database Configuration (for future persistence) ===
# DATABASE_URL=sqlite:///mpsa.db
# DATABASE_URL=postgresql://user:password@localhost:5432/mpsa

# === Model Configuration ===
USE_GPU=True
BATCH_SIZE=32

# === Feature Flags ===
ENABLE_CACHING=True
ENABLE_LOGGING=True
DEBUG_MODE=False